    <a href="{{ link ?? 'javascript:void(0);' }}" 
    class="py-3 px-9 bg-{{ bg ?? 'bg-transparent' }} 
    hover:bg-{{ bg.replace('primary', '700') }}
    default-transition text-{{ color ?? 'white' }} {{ addClass ?? '' }}"
    {{ $props.serializeExcept(['color', 'link', 'bg', 'addClass']) }}>
        @if(text)
            {{ text }}

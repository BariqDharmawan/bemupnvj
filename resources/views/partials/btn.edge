    <button type="{{ link }}" class="py-3 px-9 default-transition {{ bg == 'red' ? 'bg-red-primary text-white' : 'bg-black bg-opacity-80'}}">
        @if(text)
            {{ text }}
        @elseif(icon)
            <img src="{{ icon }}" alt="">
